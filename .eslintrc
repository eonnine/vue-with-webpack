{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "eslint-config-prettier", "plugin:prettier/recommended"],
  "plugins": [
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "rules": {
    "prettier/prettier": "warn",
    "comma-dangle": ["warn", "always-multiline"]
  }
}